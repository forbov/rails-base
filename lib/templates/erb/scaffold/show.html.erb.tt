<!-- lib/templates/erb/scaffold/show.html.erb.tt -->

<%%= render 'layouts/page_title', page_title: "<%= singular_table_name.titleize %>", page_subtitle: nil %>
<div class="container border shadow bg-light bg-gradient">
  <div class="row my-3">
    <div class="col-md-9 col-lg-10 order-md-1 order-2">
      <%%= render @<%= singular_table_name %>, summary: false %>
    </div>
    <div class="col-md-3 col-lg-2 order-md-2 order-1">
      <%% if can? :edit, @<%= singular_table_name %> %>
        <div class="d-grid my-3">
          <%%= link_to 'Edit <%= singular_table_name.titleize %>', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "btn btn-primary" %>
        </div>
      <%% end %>
      <%% if can? :destroy, @<%= singular_table_name %> %>
        <div class="d-grid my-3">
          <%%= link_to 'Delete <%= singular_table_name.titleize %>', @<%= singular_table_name %>, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      <%% end %>
      <div class="d-grid my-3">
        <%%= link_to <%= index_helper %>_path, class: "btn btn-secondary" do %>
          <i class="fi-previous"></i>&nbsp;<%= plural_table_name %>
        <%% end %>
      </div>
    </div>
  </div>
  <%%# Keep the following section if the show screen has tabs/relationships to other entites %>
  <%%= render 'layouts/bootstrap_tabs', bootstrap_tabs: @bootstrap_tabs %>
</div>

<%%# Move the following section to a file named '_<%= singular_table_name %>.html.erb' %>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%%= <%= singular_table_name %>.choose_identifying_attribute %></h5>
    <div class="card-text">
      <table class="table table-striped table-hover table-sm">
<% attributes.reject(&:password_digest?).each do |attribute| -%>
        <tr>
          <th class="medium-text-right"><%= attribute.human_name %></th>
          <td><%%= <%= singular_table_name %>.<%= attribute.column_name %> %></td>
        </tr>
<% end -%>
      </table>
    </div>
  </div>
</div>
<%%# End section %>