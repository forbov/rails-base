<%= render 'layouts/page_title', page_title: "Log in", page_subtitle: nil %>
<div class="container border shadow bg-light bg-gradient">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row my-3">
      <div class="col-md-9 col-lg-10 order-md-1 order-2">
        <div class="row my-3">
          <div class="col-md-3 text-md-end">
            <%= f.label :email, class: "form-label" %>
          </div>
          <div class="col-md">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-md-3 text-md-end">
            <%= f.label :password, class: "form-label" %>
          </div>
          <div class="col-md">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="row my-3">
            <div class="col-md-3 text-md-end">
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
            <div class="col-md">
              <%= f.check_box :remember_me, class: "form-check-input" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-3 col-lg-2 order-md-1 order-2">
        <div class="d-grid my-3">
          <%= button_tag class: "btn btn-primary" do %>
            <i class="fi-play"></i>&nbsp;Log in
          <% end %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
