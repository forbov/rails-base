<%= render 'layouts/page_title', page_title: 'Forgot your password?', page_subtitle: nil %>
<div class="container border shadow bg-light bg-gradient">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row my-3">
      <div class="col-md-9 col-lg-10 order-md-1 order-2">
        <div class="row my-3">
          <div class="col-md-3 text-md-end">
            <%= f.label :email, class: "form-label" %>
          </div>
          <div class="col-md">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-lg-2 order-md-2 order-1">
        <div class="d-grid my-3">
          <%= f.submit "Send instructions", class: "btn btn-primary" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
