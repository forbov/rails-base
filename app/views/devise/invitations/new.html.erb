<%= render 'layouts/page_title', page_title: @page_title, page_subtitle: nil %>
<div class="container border shadow bg-light bg-gradient">
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.hidden_field :user_role_id, value: @user_role.name %>
    <%= f.hidden_field :created_by, value: current_user.id %>
    <%= f.hidden_field :updated_by, value: current_user.id %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row my-3">
      <div class="col-md-9 col-lg-10 order-md-1 order-2">
        <div class="row my-3">
          <div class="col-md-3 text-md-end">
            <%= f.label :email, class: "form-label" %>
          </div>
          <div class="col-md">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-md-3 text-md-end">
            <%= f.label :first_name, class: "form-label" %>
          </div>
          <div class="col-md">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-md-3 text-md-end">
            <%= f.label :last_name, class: "form-label" %>
          </div>
          <div class="col-md">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-md-3 text-md-end">
            <%= f.label :mobile_phone, class: "form-label" %>
          </div>
          <div class="col-md">
            <%= f.text_field :mobile_phone, class: "form-control" %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-md-3 text-md-end">
            <%= f.label :time_zone, class: "form-label" %>
          </div>
          <div class="col-md">
            <%= f.time_zone_select :time_zone, /Australia/,
                                      { default: "Australia/Melbourne" }, 
                                      { class: "form-select" } %>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-lg-2 order-md-1 order-2">
        <div class="d-grid my-3">
          <%= button_tag class: "btn btn-primary" do %>
            <i class="fi-mail"></i>&nbsp;Send Invite
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>